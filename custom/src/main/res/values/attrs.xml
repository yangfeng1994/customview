        <attr name="stageItemHeight" format="dimension" />
        <attr name="stageItemWidth" format="dimension" />
        <attr name="stageProgressCorners" format="dimension" />
        <attr name="stageProgressBackground" format="color" />
        <attr name="stageValueMarginTop" format="dimension" />
        <attr name="stageScaleMargeTop" format="dimension" />
        <attr name="stageScaleWidth" format="dimension" />
